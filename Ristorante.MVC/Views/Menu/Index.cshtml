@model IEnumerable<MenuViewModel>


<h1>Scegli uno dei nostri fantastici menù!</h1>
@if (User.IsInRole("Ristoratore"))
{
    <a type="button" value="Create" asp-controller="Menu" asp-action="Create" class="btn btn-info"><i class="fa fa-plus"></i> Nuovo Menu</a>

}


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            @if (User.IsInRole("Ristoratore"))
            {
                <th scope="col">Actions</th>
            }
            </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><a type="button" value="Detail" asp-controller="Menu" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">@item.Id</a></td>
                <td>@item.Nome</td>
                <td>
                    @if (User.IsInRole("Ristoratore"))
                    {
                        <a type="button" value="Edit" asp-controller="Menu" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"><i class="fa fa-edit"></i></a>
                    }
                    </td>

            </tr>
        }
    </tbody>
</table>

